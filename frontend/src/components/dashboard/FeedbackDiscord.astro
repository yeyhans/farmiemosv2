                    </a>
                </div>
                <div class="relative">
                    <div class="w-64 h-64 bg-blue-600 rounded-2xl overflow-hidden shadow-lg transform rotate-3 hover:rotate-0 transition-transform duration-300">
                        <div class="p-6">
                            <div class="space-y-4">
                                <div class="flex items-center space-x-2">
                                    <div class="w-3 h-3 bg-custom-red rounded-full"></div>
                                    <div class="w-3 h-3 bg-custom-yellow rounded-full"></div>
                                    <div class="w-3 h-3 bg-custom-green rounded-full"></div>
                                </div>
                                <div class="h-4 bg-blue-500 rounded w-3/4"></div>
                                <div class="h-4 bg-blue-500 rounded w-1/2"></div>
                                <div class="h-4 bg-blue-500 rounded w-5/6"></div>
                                <div class="h-4 bg-blue-500 rounded w-2/3"></div>
                            </div>
                        </div>
                    </div>
                    <div class="absolute -bottom-4 -right-4 w-24 h-24 bg-custom-yellow rounded-full flex items-center justify-center transform rotate-12">
                        <span class="text-2xl">🌱</span>
                    </div>
                </div>
            </div>
        </div>
    </div>


<script is:inline>
    // Previous JavaScript remains the same

    // Discord button interaction
    const discordButton = document.getElementById('discordButton');
    discordButton.addEventListener('click', (e) => {
        e.preventDefault();
        // Replace 'YOUR_DISCORD_INVITE_LINK' with your actual Discord invite link
        window.open('https://discord.gg/rMT4FzWu', '_blank');
    });

    // Agregar efecto de hover al botón de Discord
    discordButton.addEventListener('mouseenter', () => {
        discordButton.classList.add('transform', 'scale-105');
    });

    discordButton.addEventListener('mouseleave', () => {
        discordButton.classList.remove('transform', 'scale-105');
    });

    // Animación de entrada para la sección de Discord
    const discordSection = document.querySelector('.max-w-6xl.mx-auto.mt-12');
    discordSection.style.opacity = '0';
    discordSection.style.transform = 'translateY(20px)';

    setTimeout(() => {
        discordSection.style.transition = 'all 0.5s ease-out';
        discordSection.style.opacity = '1';
        discordSection.style.transform = 'translateY(0)';
    }, 500);
</script>