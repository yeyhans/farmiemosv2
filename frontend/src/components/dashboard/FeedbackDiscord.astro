    <!-- Nueva sección de Discord -->
    <div class="max-w-6xl mx-auto mt-12">
        <div class="bg-custom-blue rounded-2xl shadow-xl p-8 text-white">
            <div class="flex flex-col md:flex-row items-center justify-between">
