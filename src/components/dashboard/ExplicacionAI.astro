<script is:inline>
    // Animación de los conectores
    document.addEventListener('DOMContentLoaded', () => {
        const connectors = document.querySelectorAll('.bg-gradient-to-r');
        connectors.forEach(connector => {
            connector.style.transition = 'transform 0.3s ease-in-out';
        });
    });

    // Efecto hover en los nodos principales
    const nodes = document.querySelectorAll('.transform');
    nodes.forEach(node => {
        node.addEventListener('mouseenter', () => {
            nodes.forEach(otherNode => {
                if (otherNode !== node) {
                    otherNode.style.opacity = '0.7';
                }
            });
        });

        node.addEventListener('mouseleave', () => {
            nodes.forEach(otherNode => {
                otherNode.style.opacity = '1';
            });
        });
    });

    // Animación inicial
    const conceptMap = document.getElementById('conceptMap');
    setTimeout(() => {
        conceptMap.style.opacity = '1';
        conceptMap.style.transform = 'translateY(0)';
    }, 300);
</script>

<style>
    #conceptMap {
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.5s ease-out;
    }
</style>