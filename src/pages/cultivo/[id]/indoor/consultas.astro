---
import Layout from '../../../../layouts/DashboardLayout.astro';
import { authenticate } from '../../../../lib/auth';
import { supabase } from '../../../../lib/supabase';
import ContactoPersonal from '../../../../components/cultivos/indoor/consultas/ContactoPersonal';
import AsistenteCultivo from '../../../../components/cultivos/indoor/consultas/AsistenteCultivo';


const { id } = Astro.params;
const { user, redirect } = await authenticate(Astro);
if (redirect) {
    return Astro.redirect(redirect);
}

const user_id = user?.id;

const { data: cultivo } = await supabase
  .from('cultivos')
  .select('config')
  .eq('id', id)
  .eq('uuid', user_id)
  .single();    

const config = cultivo?.config;

