---
import Features from '../components/Features.astro';
import Faqs from '../components/Faqs.tsx';
import Layout from '../layouts/Layout.astro';

---

<Layout	title="Farmiemos - Innovamos tu cultivo con herramientas como AI e IoT." description="Probamos y ofrecemos los mejores productos e información para que tú y tus conocidos cultiven con éxito nuestra planta preferida. " >
	<section class="text-center">
		<h1 class="text-3xl font-black text-custom-yellow md:text-4xl">¡Bienvenidos a <span class="text-custom-green">Farmiemos!</span></h1>
		<p class="mt-3 text-lg font-medium">Transformamos la agricultura juntos </p>
		  <div class="flex justify-center items-center">
			<span class="animate-bounce space-x-0">
			  <img src="/salute-emoji.png" width="20" height="20" class="inline-block">
			  <img src="farmer-emoji.png" width="20" height="20" class="inline-block">
			</span>
		  </div>
		  
	</section>
	
	<section class="text-center">

		<div class="flex flex-col items-center justify-center mt-8">
			<div class="flex flex-col items-center justify-center">
				<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 items-center w-full max-w-5xl mx-auto">
					<!-- Card 1: Empieza Ahora -->
					<a href="/dashboard" target="_blank" class="w-full">
						<div class="bg-white/80 rounded-lg shadow-md hover:shadow-lg transition p-3 flex items-center h-full">
							<div class="mr-3 bg-custom-green rounded-full p-2 flex-shrink-0">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
								</svg>
							</div>
							<div>
								<p class="font-bold text-green-600 text-sm">Empieza Ahora</p>
								<p class="text-sm font-bold text-custom-green">Acceso Gratis</p>
								<p class="text-xs text-gray-500">Periodo de pruebas</p>
							</div>
						</div>
					</a>
	
					<!-- Card 2: Qué Hacemos -->
					<a href="/que-hacemos" target="_blank" class="w-full">
						<div class="bg-white/80 rounded-lg shadow-md hover:shadow-lg transition p-3 flex items-center h-full">
							<div class="mr-3 bg-custom-blue rounded-full p-2 flex-shrink-0">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
							</div>
							<div>
								<p class="font-bold text-green-600 text-sm">¿Qué Hacemos?</p>
								<p class="text-sm font-bold text-custom-green">Nuestro Proyecto</p>
								<p class="text-xs text-gray-500">Tu feedback importa</p>
							</div>
						</div>
					</a>
	
					<!-- Card 3: Contáctanos -->
					<a href="https://wa.me/56981570958?text=Estamos%20aquí%20para%20ayudarte,%20cualquier%20duda%20que%20tengas%20con%20respecto%20a%20Farmiemos%20y%20nuestros%20productos%20o%20servicios%20solo%20contáctese" target="_blank" rel="noopener noreferrer" class="w-full">
						<div class="bg-white/80 rounded-lg shadow-md hover:shadow-lg transition p-3 flex items-center h-full">
							<div class="mr-3 bg-green-500 rounded-full p-2 flex-shrink-0">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="currentColor" viewBox="0 0 24 24">
									<path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
								</svg>
							</div>
							<div>
								<p class="font-bold text-green-600 text-sm">Contáctanos</p>
								<p class="text-sm font-bold text-custom-green">WhatsApp</p>
								<p class="text-xs text-gray-500">Respuesta rápida</p>
							</div>
						</div>
					</a>
	
					<!-- Card 4: Oferta Especial (manteniendo la original) -->
					<a href="/farmienda" target="_blank" class="w-full">
						<div class="bg-white/80 rounded-lg shadow-md hover:shadow-lg transition p-3 flex items-center h-full">
							<div class="mr-3 bg-custom-yellow rounded-full p-2 flex-shrink-0">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
								</svg>
							</div>
							<div>
								<p class="font-bold text-green-600 text-sm">Necesitas Farmienda?</p>
								<p class="text-sm font-bold text-custom-green">Comprar aquí</p>
								<p class="text-xs text-gray-500">Descubre más</p>
							</div>
						</div>
					</a>
	
				</div>
			</div>
		</div>

	</div>


	<Faqs client:load/>
	<Features />

</Layout>