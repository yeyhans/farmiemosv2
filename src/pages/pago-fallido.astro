---
import Layout from '../layouts/Layout.astro';

const error = Astro.url.searchParams.get('error') || 'Hubo un error procesando tu pago';
---

<Layout title="Pago Fallido - Farmienda" description="Ha ocurrido un error en el proceso de pago">
    <main class="container mx-auto px-4 py-8 max-w-2xl">
        <div class="bg-white p-8 rounded-lg shadow-md text-center">
            <div class="mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-red-500 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            
            <h1 class="text-3xl font-bold text-red-600 mb-4">Error en el Pago</h1>
            <p class="text-gray-600 mb-4">
                {error}
            </p>
            
            <div class="mt-8 space-y-4">
                <a href="/checkout" class="block bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700">
                    Intentar nuevamente
                </a>
                <a href="/" class="block text-blue-600 hover:text-blue-800">
                    Volver al inicio
                </a>
            </div>
        </div>
    </main>
</Layout> 