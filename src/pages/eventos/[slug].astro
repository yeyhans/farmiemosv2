import Layout from '../../layouts/Layout.astro';
import MercadoPagoButton from '../../components/tienda/PagoEventsButton';
import { supabase } from '../../lib/supabase';

// Get the slug from URL parameters
const { slug } = Astro.params;

// Fetch the product with the matching slug
let { data: products, error } = await supabase
  .from('products')
  .select('*')
  .eq('slug', slug)
  .limit(1);

if (error) {
  console.error('Error fetching products:', error);
}

// Handle case where no product is found
if (!products || products.length === 0) {
  return Astro.redirect('/404'); // Redirect to 404 page if event not found
}

// Get product data
const product = products[0];
const price = product.price;
const description = product.description;
const fecha_event = product.fecha_event;
const day_event = product.day_event;
const day_name_event = product.day_name_event;
const month_event = product.month_event;
const referee = product.referee;
const description_general = product.description_general;
const img_principal = product.img_principal;
const event_restriction = product.event_restriction;

console.log(product);
const description_incluye = product.description_incluye;

// Parse description_incluye from string to array if needed
const descriptionItems = typeof description_incluye === 'string' 
    ? description_incluye.split(',').map(item => item.trim())
    : description_incluye || [];

const maxCapacity = product.capacity_event;
let { data: asistentes } = await supabase
    .from('asistentes_evento')
    .select('*')
    .eq('event_day', day_event);

const asistentesCount = asistentes?.length || 0;
console.log(asistentesCount);

// Calculate remaining tickets
const remainingTickets = maxCapacity - asistentesCount;
// Check if event is sold out
const isSoldOut = remainingTickets <= 0;
---

<Layout title="Evento de Cataci√≥n | Aprende a catar tomates y cervezas" description="Eventos exclusivos en Antofagasta para elevar la cannacultura local. Aprende a catar tomates y cervezas en un ambiente amigable y educativo.">
